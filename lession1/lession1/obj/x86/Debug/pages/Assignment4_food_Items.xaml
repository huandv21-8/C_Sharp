<Page
    x:Class="lession1.pages.Assignment4_food_Items"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:lession1.pages"
    xmlns:Models="using:lession1.model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#f0f0f0">
        <ListView x:ConnectionId='2' Margin="0,50,0,0" x:Name="MN">
            <ListView.ItemTemplate>
                <DataTemplate                                      >
                    <ListViewItem x:ConnectionId='4'>
                        <Grid>
                            <RelativePanel>
                                <Image x:ConnectionId='5'  Width="40" Height="40" x:Name="image" HorizontalAlignment="Left"                        />
                                <TextBlock x:ConnectionId='6' RelativePanel.RightOf="image" x:Name="name" Foreground="Black" VerticalAlignment="Center" Margin="45,0,0,0"                     />
                                <TextBlock x:ConnectionId='7' Foreground="Black" RelativePanel.RightOf="name" x:Name="des" VerticalAlignment="Center" Margin="45,0,0,0"                            />
                                <TextBlock x:ConnectionId='8' Foreground="Black" RelativePanel.RightOf="des" VerticalAlignment="Center" Margin="45,0,0,0"                      />
                            </RelativePanel>
                        </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>

